<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interação com APIs | Create com POST</title>
</head>

<body>

    <html>

    <body>
        <header>
        <form actions="" method="post">

            <label for="id">ID:</label>
            <input type="text" id=id disabled><br>

            <label for="descricao">Descrição:</label>
            <input type="text" id="descricao"><br>

            <label for="preco">Preço:</label>
            <input type="text" id="descricao"><br>

            <button type="button">Cadastrar</button>

        </form>
        </header>

        <div id="listaProdutos"></div>

        <script>
            
            fetch('http://localhost:3000/produtos', {
                method: 'GET',
                headers: {
                    'Content-type': 'application/json'
                }
            })
                .then(resposta => resposta.json())
                .then(resposta => {

                    for (let i = 0; i < resposta.length; i++) {
                        const ul = document.createElement('ul');

                        ul
                            .appendChild(document.createElement('li'))
                            .innerHTML = resposta[i].id;

                        ul
                            .appendChild(document.createElement('li'))
                            .innerHTML = resposta[i].descricao;

                        ul
                            .appendChild(document.createElement('li'))
                            .innerHTML = resposta[i].preco;

                        document
                            .querySelector('#listaProdutos')
                            .appendChild(ul);

                    }

                })
        </script>

    </body>

    </html>